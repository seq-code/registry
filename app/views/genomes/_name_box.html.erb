<div class="p-3 mx-1 mb-3 bg-light border-info row" style="border-left: 0.5em solid;">
  <% if @name.present? %>
    <div class="col-md-4">
      <h4>Name</h4>
      <%= link_to(@name) { %><%= @name.name_html %><% } %>
    </div>
  <% end %>
  <div class="col-md-4">
    <h4>Database</h4>
    <%= Name.type_material_hash[@genome.database.to_sym][:name] %>
  </div>
  <div class="col-md-4">
    <h4>Accession</h4>
    <%= @genome.accession %>
  </div>
</div>
