<div class="p-3 mx-1 mb-3 bg-light border-info row"
     style="border-left: 0.5em solid;">
  <div class="col-md-4">
    <h4>Name</h4>
    <% if @name.present? %>
      <%= link_to_name(@name) %>
    <% else %>
      <span class="text-danger">Not registered</span>
    <% end %>
  </div>
  <div class="col-md-4">
    <h4>Database</h4>
    <%= @genome.db_name %>
  </div>
  <div class="col-md-4">
    <h4>Accession</h4>
    <%= @genome.accession %>
  </div>
</div>
