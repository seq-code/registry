
<!-- Hidden container elements -->
<div class="position-fixed bottom-0 right-0 p-2" id="toastCont"></div>
<% if !@no_register_sentinel && @register.present? %>
  <% if @register&.can_view?(current_user) %>
    <div class="position-fixed p-2" id="registerSentinel" data-toggle="tooltip"
         title="Register List">
      <%= link_to(@register, class: 'btn btn-primary btn-sm') do %>
        <%= fa_icon('clipboard-list') %>
        <span class="d-none d-sm-inline">
          <%= @register.acc_url %>
        </span>
      <% end %>
    </div>
  <% end %>
<% end %>
<%= yield_modals %>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>

<% if Rails.configuration.try(:matomo) %>
  <!-- Matomo -->
  <script>
    var _paq = window._paq = window._paq || [];
    /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
      var u="<%= Rails.configuration.matomo %>";
      _paq.push(['setTrackerUrl', u+'matomo.php']);
      _paq.push(['setSiteId', '1']);
      var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
      g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
    })();
  </script>
  <!-- End Matomo Code -->
<% end %>
