<% unless flash.empty? %>
  <div class='container mt-3'>
    <% flash.each do |k,v| %>
      <%
        alt_k = { alert: 'danger', notice: 'info' }
	k = alt_k[ k.to_sym ] if alt_k[ k.to_sym ]
      %>
      <div class='alert alert-<%= k %>' role='alert'><%= v %></div>
    <% end %>
  </div>
<% end %>
