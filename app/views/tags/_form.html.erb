
<%= simple_form_for(@tag) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification(message: f.object.errors[:base].to_sentence) if
         f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input(:name) %>
    <b>Color</b><br/>
    <%= f.color_field(:color) %>
    <br/>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button(:submit) %>
  </div>
<% end %>
