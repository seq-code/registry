<%= download_buttons(
      [[author_url(@author, format: :json), 'file-code', 'JSON']]) %>
<% provide(:title, @author.full_name) %>
<h1><%= @author.full_name %></h1>
<hr/>

<h2>
  Publications
  <div class="badge badge-count"><%= @publications.count %></div>
</h2>
<%= pager @publications %>
<div class='card-columns card-columns-wide'>
  <% @publications.each do |publication| %>
    <%= render publication %>
  <% end %>
</div>
<%= pager @publications %>

