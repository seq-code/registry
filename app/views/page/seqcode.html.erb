
<div id="seqcode-down">
  <%= @markdown.render(@seqcode).html_safe %>
</div>

<div class="card mt-5" style="margin-bottom: 50%;">
  <div class="card-body text-center bg-light" id="version">
    <p>
      <b>SeqCode Version:</b> <%= @tag %><br/>
      <b>Last Update:</b> <%= @last_modified.strftime('%d %B, %Y') %>
    </p>
  </div>
</div>

<script>
  $('#seqcode-down table').addClass('table table-hover mb-3');
  $('#seqcode-down [id]').addClass('text-primary mt-4 link-to-id');
  $('#seqcode-down .link-to-id').prepend(' <a href="#" class="linker">Â¶</a>');
  $('#seqcode-down .link-to-id .linker').each(function(idx){
    $(this).addClass('text-secondary');
    $(this).attr('href', '#' + $(this).parent().attr('id'));
  });
  $('#seqcode-down .link-to-id [name]').each(function(idx){
    $(this).siblings('.linker').attr('href', '#' + $(this).attr('name'));
  });
  // Smooth scrolling
  $(document).on('click', 'a[href^="#"]', function (event) {
    event.preventDefault();

    var hash = $.attr(this, 'href');
    var target = $(hash);
    if(target.length == 0)
      target = $('[name="' + hash.substr(1) + '"]').parent();
    var linkToMe = $('<div class="link-to-me"></div>')
    linkToMe.prependTo(target);
    $('html, body').animate(
      { scrollTop: target.offset().top },
      {
        complete: function() {
          $('.link-to-me').animate(
            { width: 0 },
            { duration: 'slow' }
          );
          window.location.hash = hash;
        }
      }
    );
    return(false);
  });
</script>

<style>
  #seqcode-down .link-to-id .linker {
    display: none;
  }
  #seqcode-down .link-to-id:hover .linker {
    display: block;
    position: absolute;
    left: -0.5em;
    width: 2.5em;
    text-decoration: none;
  }
  #seqcode-down ul:first-of-type {
    list-style-type: none;
  }
  #seqcode-down .link-to-me {
    background: #f0f0f0;
    border-bottom: 1px solid black;
    width: 100%;
    height: 1.5em;
    position: absolute;
    left: 0.5em;
    z-index: -100;
    display: inline-block;
  }
</style>

