<div class='card'>
  <%= link_to(publication, class: 'card-header-link') do %>
    <div class='card-header'>
      <h3><%= publication.title_html %></h3>
    </div>
  <% end %>
  <div class='card-body'>
    <dl>
      <%= render partial: 'publications/basic_info',
        locals: { publication: publication } %>
    </dl>
  </div>
  <div class='card-footer text-right bg-dark-ce'>
    <ul class='list-inline' style='margin: 0;'>
      <li class='list-inline-item'>
        <%= link_to publication.url,
              title: 'Link to publication', target: '_blank' do %>
          <%= fa_icon 'file-alt' %>
        <% end %>
      </li>
      <li class='list-inline-item'>
        <%= link_to publication, title: 'See more' do %>
          <%= fa_icon 'arrow-circle-right' %>
        <% end %>
      </li>
    </ul>
  </div>
</div>


