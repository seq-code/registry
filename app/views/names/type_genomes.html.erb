<%=
  download_buttons([
    [name_type_genomes_url(format: :json), 'file-code', 'JSON'],
    [name_type_genomes_url(format: :txt), 'file-alt', 'TSV']
  ])
%>
<h1>
  Type genomes of validly published names
  <div class="badge badge-count"><%= @names.count %></div>
</h1>
<div class="container p-0">
  <div class="row">
    <div class="col-sm-9">
      <b>Browse by</b>
      <span class="text-muted">â€¢</span>
      <%= link_to('all genomes', genomes_path) %>
    </div>
    <div class="col-sm-3 text-right">
      <%= list_type_selector %>
    </div>
  </div>
</div>
<hr/>

<%= adaptable_list(set: @names) do |list| %>
  <% @names.each do |name| %>
    <%=
      render(
        partial: name,
        locals: { list: list, show_type: true, effective_publication: true }
      )
    %>
  <% end %>
<% end %>

