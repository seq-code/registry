<h1>
  Register Lists 
  <small class='text-muted'>(<%= @registers.count %>)</small>
</h1>
<div class="container p-0">
  <div class="row">
    <div class="col-sm-9">
      <b>Status</b>
      <% all_status = %w[validated] %>
      <% all_status += %w[user] if current_contributor? %>
      <% all_status += %w[draft submitted notified] if current_curator? %>
      <% all_status.map do |status| %>
        <span class="text-muted">Â·</span>
        <%=
          status == @status ?
            status : link_to(status, registers_path(status: status))
        %>
      <% end %>
    </div>
    <div class="col-sm-3 text-right">
      <%= list_type_selector %>
    </div>
  </div>
</div>
<hr/>

<%= adaptable_list(set: @registers) do |list| %>
  <% @registers.each do |register| %>
    <%= render(partial: register, locals: { list: list }) %>
  <% end %>
<% end %>

